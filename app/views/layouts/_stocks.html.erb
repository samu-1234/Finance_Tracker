<div>
	<table class="table able-striped table-hover mt-4">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Ticker</th>
				<th scope="col">Latest_Price</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>

			<% if @tracked_stock %>
					<% @tracked_stock.each do |stock| %>
					<tr>
						<th scope="row"><%= stock.name %></th>
						<td><%= stock.ticker %></td>
						<td><%= stock.last_price %></td>
						<td>
							<%= button_to "Remove", user_stock_path(stock), method: :delete, data:{confirm:"Are you sure"}, class:"btn btn-danger"  %>
						</td>

					</tr>
					<% end %>
			<% end %>
			


		</tbody>
	</table>
</div>

